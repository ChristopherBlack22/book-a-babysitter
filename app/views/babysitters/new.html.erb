<h1>Create a new Babysitter</h1>
<%= form_for @babysitter do |f| %>
    <%= f.label :name%>
    <%= f.text_field :name %>
    <%= f.label :address %>
    <%= f.text_field :address %>
    <br><br>
    <%= f.submit %>
<% end %>

<% if @babysitter.errors.any? %>
    <h2>
        <%= pluralize(@babysitter.errors.count, "error") %>
        stopped this from being saved:
    </h2>
    <ul>
        <% @babysitter.errors.full_messages.each do |message| %>
            <li>
                <%= message %>
            </li>
        <% end %>
    </ul>
<% end %>