<h1>Parent Profile</h1>
<h2>Hello <%= current_user.full_name %></h2>


<h3>Your family is currently...</h3>
<ul>
    <% current_user.children.each do |child| %>
        <li>
            <%= child.name %>: <%= pluralize(child.age, "year") %> old
            <br>
        </li>
    <% end %>
</ul>
<p><%= link_to "Add to your family", new_parent_child_path(current_user) %>



<h3>Here are your Babysitter bookings</h3>
<% current_user.bookings.each do |booking| %>
    <%= booking.formatted_start_time %> - <%= booking.formatted_end_time %> with <%= booking.babysitter.name %>
    <br>
    <% booking.children.each do |child| %>
        <%= child.name %>
    <% end %>
    <br>
<% end %>
<p>Create a new <%= link_to "Booking", new_parent_booking_path(current_user) %>.</p>


