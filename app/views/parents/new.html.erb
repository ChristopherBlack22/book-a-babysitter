<h2>Enter Your Details To Create An Account</h2>
<%= render partial: "layouts/errors", locals: {instance: @parent} %>
<%= form_for @parent do |f| %>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
    <br><br>
    <%= f.label :email %>
    <%= f.email_field :email %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <br><br>
    <h3>You can add Children to your Family now or later</h3>
    <small><%= f.fields_for :children do |child| %>
        <%= render partial: "children/form", locals: {f: child} %>
        <br><br>
    <% end %></small>
    <br>
    <%= f.submit "Create New Account" %>
<% end %>
